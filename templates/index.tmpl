<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .title }}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@geist-ui/style@latest/dist/style.css">
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>LATEX RENDERER</h1>
            <button id="theme-toggle" class="zi-btn mini auto">
                <span id="theme-icon">ðŸŒ™</span>
            </button>
        </header>

        <div class="content-wrapper">
            <div class="editor-section">
                <label for="latex-input">Input LaTeX here</label>
                <textarea 
                    id="latex-input" 
                    class="zi-input-textarea"
                    placeholder="e.g., x = \frac{-b \pm \sqrt{b^2 - 4ac}}{2a}"
                    rows="15"
                ></textarea>
                <button id="render-btn" class="zi-btn primary">Render</button>
            </div>

            <div class="preview-section">
                <div id="preview-area">
                    <div id="loading" class="loading-state" style="display: none;">
                        <button class="zi-btn loading">
                            <span class="zi-loading-shim">
                                <i></i><i></i><i></i>
                            </span>
                        </button>
                        <p>Rendering LaTeX...</p>
                    </div>
                    
                    <div id="error-message" class="error-state" style="display: none;">
                        <p class="zi-note error">
                            <span class="zi-note-type">ERROR:</span>
                            <span id="error-text"></span>
                        </p>
                    </div>
                    
                    <div id="success-state" style="display: none;">
                        <div class="rendered-output">
                            <img id="rendered-image" alt="Rendered LaTeX">
                        </div>
                        <div class="action-buttons">
                            <button id="download-btn" class="zi-btn">Download</button>
                            <button id="copy-btn" class="zi-btn">Copy to Clipboard</button>
                        </div>
                    </div>

                    <div id="empty-state" class="empty-state">
                        <p>Enter LaTeX code and click "Render" to see the result</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/static/js/index.js"></script>
</body>
</html>